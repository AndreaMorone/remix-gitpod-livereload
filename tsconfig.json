{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "__tests__", "node_modules"],
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "CommonJS",
    "target": "ES2020",
    "skipLibCheck": true,
    "composite": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": false,
    "rootDir": ".",
    "outDir": "./dist"
  }
}